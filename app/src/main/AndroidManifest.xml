<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.spotifystreamer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistTrackActivity"
            android:label="@string/title_activity_artist_tracks"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.spotifystreamer.MainActivity" />
        </activity>
        <activity
            android:name=".PlayActivity"
            android:label="@string/title_activity_play"
            android:parentActivityName=".ArtistTrackActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ArtistTrackActivity" />
        </activity>
        <service android:name=".service.PlayService"/>
        <receiver android:name=".MainActivity$PlayActivityReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="PLAY"/>
                <category android:name="android.intent.category.default"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".ArtistTrackActivity$PlayActivityReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="PLAY"/>
                <category android:name="android.intent.category.default"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".service.PlayService$PlayServiceReceiver" android:enabled="true"/>
    </application>

</manifest>
